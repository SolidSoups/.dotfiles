{
  "clock#time":{
    "format" : " {:%R}", /*<i>%A, %e %B %Y</i>} ",*/
    "format-alt": "<big><b>{:%R}</b></big>",
    "interval": 60,
    "tooltip": false
  },

  "clock#date":{
    "format" : " <i>{:%e-%m-%Y}</i>",
    "format-alt": "<big><b>{:%R}</b></big>",
    "interval": 60,
    "tooltip": false
  },

  "hyprland/workspaces":{
    "format": "{name}{icon}",
    "format-icons":{
      "urgent": "!",
      "default": ""
    },
    "persistent-workspaces" : {
      "1" : [],   
      "2" : [],   
      "3" : [],   
      "4" : []   
    }
  },


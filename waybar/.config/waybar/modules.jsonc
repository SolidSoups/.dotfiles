  "custom/audio": {
    "exec": "~/.config/waybar/scripts/audio-monitor.sh",
    "return-type": "json",
    "on-click": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%",
    "escape": true
  },

  "cpu": {
    "interval": 1,
    "format": " {usage}%",
  },

  "tray": {
    "icon-size": 22,
    "spacing": 7
  },

  "memory": {
    "interval": 5,
    "format": "  {used} / {total} ({percentage}%)",
    "on-click": "kitty htop"
  },

  "battery": {
    "interval": 60,
    "states": {
      "warning": 40,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
  },

  "custom/power": {
    "format": "⏻",
    "on-click": "wlogout"
    }
  }

}
